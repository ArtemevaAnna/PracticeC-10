#include <iostream>
#include <vector>
#include <list>

using namespace std;

class Student{
public:
    string name;
    string surname;
    string hall;

    Student(string n, string s, string m){
        name = n;
        surname = s;
        hall = m;

    };
};
class Teacher: public Student{
public:
    list<Student*> group;
    short rank;
    Teacher(string n1, string s1, string m1) : Student(n1, s1, m1) {
        name = n1;
        surname = s1;
        hall = m1;

    };
    Teacher& visit_card(){
        cout << "Surname: " << surname << endl;
        cout << "Name: " << name << endl;
        cout << "Hall: " << hall << endl;
        cout << "Rank: " << rank << endl;
    }
};
int main(){
    Teacher Margo(  "Margo", "Lykina","200");
    Student Anna( "Anna", "Potapova", "199");
    Student Dima( "Dima", "Titov", "198");

    Margo.group.push_back(&Anna);
    Margo.group.push_back(&Dima);
    Student *adress;
    adress = &Anna;
    Student frt1 = *adress; // frt1 = *&frt
    return 0;
}
